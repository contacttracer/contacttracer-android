<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="42dp"
	android:layout_marginTop="4dp"
	android:layout_marginBottom="4dp"
	tools:background="@color/unavailable_gray">
	
	<ImageView
		android:id="@+id/intersection_item_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		tools:srcCompat="@drawable/ic_whatshot_black_24dp"
		android:tint="@color/default_icons_tint"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>
	
	<TextView
		android:id="@+id/intersection_item_time"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="8dp"
		android:maxLines="1"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:includeFontPadding="false"
		android:textAppearance="@style/TextAppearance.Default"
		android:textSize="14sp"
		tools:text="@string/fever_title"
		app:layout_constraintStart_toEndOf="@id/intersection_item_icon"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/intersection_item_status"
		app:layout_constraintEnd_toEndOf="parent"/>
	
	<TextView
		android:id="@+id/intersection_item_status"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:minHeight="18dp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:maxLines="1"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:includeFontPadding="false"
		android:textAppearance="@style/TextAppearance.Default"
		android:textSize="12sp"
		tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
		app:layout_constraintStart_toEndOf="@id/intersection_item_icon"
		app:layout_constraintTop_toBottomOf="@id/intersection_item_time"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/intersection_item_lat"/>
	
	<TextView
		android:id="@+id/intersection_item_lat"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:gravity="center_vertical"
		android:includeFontPadding="false"
		android:textAppearance="@style/TextAppearance.Default"
		android:maxLines="1"
		app:layout_constraintEnd_toStartOf="@id/intersection_item_lng"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/intersection_item_time"
		app:layout_constraintStart_toEndOf="@id/intersection_item_status"
		tools:text="55.1234,"/>
	
	<TextView
		android:id="@+id/intersection_item_lng"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:gravity="center_vertical"
		android:includeFontPadding="false"
		android:textAppearance="@style/TextAppearance.Default"
		android:maxLines="1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/intersection_item_time"
		app:layout_constraintStart_toEndOf="@id/intersection_item_lat"
		tools:text="66.6543"/>

</androidx.constraintlayout.widget.ConstraintLayout>
