<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">
	
	<string name="fontFamily_regular" translatable="false">sans-serif</string>
	<string name="fontFamily_medium" translatable="false">sans-serif-medium</string>
	<string name="fontFamily_light" translatable="false">sans-serif-light</string>
	
	<style name="TextAppearance" parent="@android:style/TextAppearance">
		<item name="android:fontFamily">@string/fontFamily_regular</item>
	</style>
	
	<style name="TextAppearance.CardDefault">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	<style name="TextAppearance.CardTitle" parent="TextAppearance.CardDefault">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="TextAppearance.CardDefault.Title" parent="TextAppearance.CardDefault">
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="TextAppearance.CardNumber">
		<item name="android:textSize">36sp</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	<style name="TextAppearance.CardTitle.Sick" parent="TextAppearance.CardNumber">
		<item name="android:textSize">@dimen/sick_card_text_size</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="TextAppearance.Default">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	<style name="TextAppearance.Title">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#000</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	<style name="TextAppearance.Survey" parent="TextAppearance.Default"/>
	
	<style name="TextAppearance.Survey.Title" parent="TextAppearance.Survey">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="TextAppearance.Survey.Default" parent="TextAppearance.Survey.Title">
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">normal</item>
	</style>
	
	<style name="TextAppearance.Survey.Warning">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/infected_yellow</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="TextAppearance.Survey.DaysNumber">
		<item name="android:textSize">50sp</item>
		<item name="android:textColor">@color/standard_white</item>
		<item name="android:textStyle">bold</item>
	</style>
	
</resources>